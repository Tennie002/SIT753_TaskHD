<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Submitted Plans</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      font-family: 'Roboto', sans-serif;
    }

    .navbar-custom {
      background-color: #0492c2;
    }

    .navbar-custom .nav-link {
      font-size: 1.1rem;
      font-weight: 500;
      color: #f8f9fa !important;
    }

    .navbar-custom .nav-link.active {
      text-decoration: underline;
      font-weight: 700;
      color: #FFD700 !important;
    }

    footer {
      background-color: #0492c2;
      color: white;
      text-align: center;
      padding: 12px 0;
    }

    .contact-form {
      max-width: 600px;
      margin: 0 auto;
    }

    .form-label::after {
      content: "*";
      color: red;
      margin-left: 4px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Submitted Custom Date Plans</h2>
    <table class="table table-bordered table-striped">
      <thead class="table-primary">
        <tr>
          <th>Name</th><th>Email</th><th>Preference</th><th>Date</th>
          <th>People</th><th>Duration</th><th>Budget</th><th>Notes</th>
        </tr>
      </thead>
      <tbody>
        <% plans.forEach(plan => { %>
          <tr>
            <td><%= plan.name %></td>
            <td><%= plan.email %></td>
            <td><%= plan.preference %></td>
            <td><%= plan.date || '-' %></td>
            <td><%= plan.people || '-' %></td>
            <td><%= plan.duration || '-' %></td>
            <td><%= plan.budget || '-' %></td>
            <td><%= plan.notes || '-' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <div class="text-center mt-3">
      <a href="/plan" class="btn btn-secondary">Back to Plan</a>
    </div>
  </div>
</body>
</html>
